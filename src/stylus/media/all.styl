
colorLBlack = #343A40
colorGray = #6C757C
colorLGray = #F8F9FA
colorBlue = #217BFF
colorLBlue = #31A2B8
colorGreen = #34A745
colorRed = #DC3545
colorYellow = #FBC10B


// font-weight 300,400,500

atime = 160ms

html
  height 100%

body
  font-family 'Roboto', sans-serif
  font-weight 400
  height 100%
  line-height 1.2
  background #383838 url('../img/background-1.jpg') 0px 0px no-repeat
  background-attachment fixed
  color white



.block
  mpd(0, 15px 0)



.title
  mpd(15px 0)
  font-weight 300
  font-size 36px
  text-align center

  &-desc
    mpd(15px 0)
    font-weight 300
    font-size 23px
    text-align center



.logo
  mpd(5px 0, 0, flex)
  align-items center
  resetLn(white, white)

  &-img
    mpd()
    border-radius 50%
    // box-shadow 0 0 1px 2px white

  &-desc
    mpd(0 0 0 8px)

  &-text
    mpd()
    font-size 26px
    font-weight 300

    &-sm
      mpd()
      font-size 10px


.header
  mpd()
  background colorLBlack
  color white



.footer
  mpd(0, 8px 0)
  background colorLBlack
  color white



.soc
  mpd(8px 0, 0, flex)
  justify-content space-between

  &-ln
    mpd()
    resetLn(white, colorLBlue)

  &-icon
    mpd()
    font-size 23px



.copy
  mpd(8px 0)
  font-size 13px
  font-weight 300
  text-align center



.nav

  &-icon

    .nav-item
      resetLn(white, colorLBlue)
      &.active
        color colorLBlue


  &-item

    &-icon
      mpd(10px auto)
      font-size 60px

    &-text
      mpd(10px 0)
      text-align center
      text-transform uppercase
      font-weight 400
      font-size 13px



.gallery

  &-item
    mpd(15px 0)
    position relative
    resetLn(white, white)

    &:before
      content ''
      display block
      position absolute
      top 0px
      left 0px
      width 100%
      height 100%
      background black
      opacity 0.20
      z-index 2
      transition atime opacity ease-in-out

    &:hover

      &:before
        opacity 0

      .gallery-image
        filter grayscale(0)

  &-image
    mpd(0 auto)
    position relative
    max-width 100%
    height auto
    border-radius 3px
    z-index 1
    filter grayscale(100%)
    transition atime all ease-in-out
